# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# OpenAI API Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=SalesPilots

# Facebook/Instagram Graph API (Required for real Instagram integration)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_business_account_id

# WhatsApp Business API (Optional - for production)
WHATSAPP_BUSINESS_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security
JWT_SECRET=your-jwt-secret-key-min-32-chars-long
ENCRYPTION_KEY=your-encryption-key-min-32-chars-long

# Production Configuration
NODE_ENV=production
LOG_LEVEL=INFO
NEXT_PUBLIC_VERCEL_URL=https://salespilots.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=GA-MEASUREMENT-ID
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Error Tracking
NEXT_PUBLIC_SENTRY_DSN=your-public-sentry-dsn

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-key
NEW_RELIC_APP_NAME=SalesPilots

# Database Connection Pool
SUPABASE_CONNECTION_POOL_SIZE=20
SUPABASE_CONNECTION_TIMEOUT=30000

# Redis (for production rate limiting and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=salespilots-backups
BACKUP_S3_REGION=ap-south-1

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Content Security Policy
CSP_REPORT_URI=https://salespilots.report-uri.com/r/d/csp/enforce

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://salespilots.io,https://www.salespilots.io

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret-key

# Feature Flags
FEATURE_AI_FINE_TUNING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MULTI_LANGUAGE=true
