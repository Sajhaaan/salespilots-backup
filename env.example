# SalesPilots.io Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=SalesPilots
NEXT_PUBLIC_APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Supabase Configuration (Primary Database)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Direct Database Connection (Optional)
DATABASE_URL=postgresql://username:password@localhost:5432/salespilots

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=7d

# Session Configuration
AUTH_COOKIE_NAME=sp_session
AUTH_COOKIE_EXPIRATION_DAYS=7

# =============================================================================
# INSTAGRAM INTEGRATION
# =============================================================================
# Instagram Basic Display API
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret
NEXT_PUBLIC_INSTAGRAM_REDIRECT_URI=https://yourdomain.com/api/auth/instagram/callback

# Instagram Graph API (for Business Accounts & Auto-Reply)
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_WEBHOOK_TOKEN=your-instagram-webhook-verification-token
INSTAGRAM_PAGE_ACCESS_TOKEN=your-instagram-page-access-token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-account-id
INSTAGRAM_AUTO_REPLY_ENABLED=true

# =============================================================================
# WHATSAPP INTEGRATION
# =============================================================================
# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your-whatsapp-business-access-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_WEBHOOK_TOKEN=your-whatsapp-webhook-verification-token

# =============================================================================
# AI INTEGRATION
# =============================================================================
# Bytez.js API Configuration (Required for AI chatbot)
BYTEZ_API_KEY=your-bytez-api-key

# Legacy OpenAI Configuration (Optional - for direct OpenAI usage)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# PAYMENT INTEGRATION
# =============================================================================
# Razorpay Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true