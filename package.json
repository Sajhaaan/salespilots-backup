{
  "name": "salespilots-io",
  "version": "1.0.0",
  "description": "AI-Powered Instagram Business Automation Platform - salespilots.io",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "postbuild": "next-sitemap",
    "db:generate": "supabase gen types typescript --local > types/supabase.ts",
    "db:reset": "supabase db reset",
    "db:migrate": "supabase migration up",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "validate": "npm run type-check && npm run lint && npm run test:ci",
    "precommit": "npm run validate",
    "prepush": "npm run validate && npm run security:audit",
    "production:build": "NODE_ENV=production next build",
    "production:start": "NODE_ENV=production next start",
    "production:deploy": "npm run production:build && npm run production:start",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1",
    "performance:test": "npm run build && npm run start & sleep 10 && npm run health:check && pkill -f 'next start'"
  },
  "dependencies": {
